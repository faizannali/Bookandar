<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codejunction.bookandaar">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.codejunction.bookandaar.ui.ViewProduct"
            android:screenOrientation="portrait"/>
        <activity android:name="com.codejunction.bookandaar.ui.EditProductDetails"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.codejunction.bookandaar.ui.SellBooks"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codejunction.bookandaar.ui.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <!-- in softInputMode adjustpan -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.codejunction.bookandaar.ui.Welcome"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.codejunction.bookandaar.auth.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.codejunction.bookandaar.auth.Login"
            android:screenOrientation="portrait" />
    </application>

</manifest>