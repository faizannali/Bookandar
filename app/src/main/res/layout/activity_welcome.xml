<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Welcome"
    android:background="@color/skin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bookandar"
            android:gravity="center"
            android:elevation="10dp"
            android:layout_marginTop="@dimen/welMarginTop"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/darkBlue"/>

        <ImageView
            android:id="@+id/welcomeImage"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:elevation="20dp"
            android:layout_marginBottom="@dimen/imageMarginBottom"
            android:src="@drawable/welcome"
            android:layout_below="@+id/appTitle"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/welcomeLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeImage"
            android:layout_marginTop="@dimen/welMarginTop"
            android:layout_marginBottom="@dimen/welMarginBottom"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginEnd="@dimen/welMarginEnd"
            android:background="@drawable/login_btn"
            android:padding="@dimen/welBtnPadding"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/welBtnSize"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/welcomeSignUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeLoginBtn"
            android:padding="@dimen/welBtnPadding"
            android:layout_marginBottom="@dimen/welMarginBottom"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginEnd="@dimen/welMarginEnd"
            android:background="@drawable/signup_btn"
            android:textStyle="bold"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="@dimen/welBtnSize"/>

    </RelativeLayout>





</ScrollView>