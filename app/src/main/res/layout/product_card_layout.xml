<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:backgroundTint="@color/skin"
    app:strokeWidth="2dp"
    app:strokeColor="@color/purple"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/notepad"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/rs_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:layout_below="@id/book_image"
            android:text="\u20B9" />
        <TextView
            android:id="@+id/home_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_image"
            android:text="1000"
            android:maxLines="1"
            android:lines="1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="2dp"
            android:layout_toRightOf="@id/rs_sign"
            android:textColor="@color/purple"/>
        <TextView
            android:id="@+id/home_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_book_price"
            android:text="My NCERT Notebooks"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="@color/purple"/>

        <TextView
            android:id="@+id/home_book_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New delhi"
            android:textSize="14sp"
            android:layout_below="@id/home_book_name"
            android:layout_margin="4dp"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/purple"
            android:drawableStart="@drawable/ic_location"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>